<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modify_List">

    <TextView
        android:id="@+id/titleViewET"
        android:layout_width="273dp"
        android:layout_height="45dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="15dp"
        android:hint="Title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rankView" />

    <TextView
        android:id="@+id/linkViewET"
        android:layout_width="273dp"
        android:layout_height="39dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:hint="Link"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleViewET" />

    <TextView
        android:id="@+id/reasonViewET"
        android:layout_width="274dp"
        android:layout_height="218dp"
        android:layout_marginStart="68dp"
        android:hint="Reason"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="362dp" />

    <EditText
        android:id="@+id/rankView"
        android:layout_width="86dp"
        android:layout_height="30dp"
        android:layout_marginStart="159dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="73dp"
        android:layout_height="46dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="4dp"
        android:text="Rank:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/rankView"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>